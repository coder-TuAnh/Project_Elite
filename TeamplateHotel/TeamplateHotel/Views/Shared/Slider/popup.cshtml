@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Controllers
@{
    Menu menu = ViewBag.Menu ?? new Menu();
    popup pu = CommentController.GetPopupByIDMenu(Request.Cookies["LanguageID"].Value, menu.ID);
}
<style>
    .popup {
        z-index: 300000 !important;
        border-radius: 0px !important;
        margin-top: 5%;
    }

    .modal-body {
        padding: 0px !important;
    }
    .modal-content {
        border-radius: 0px;
    }
    .close{
        font-size:30px;
        position: absolute !important;
        right: 9px;
    }
    #Description{
        position :absolute !important;
        width:100%;
        font-size:15px;
        bottom:10px;
        color: white;
    }
</style>
<div class="container ">
    @{
        if (pu != null)
        {
            
            <div class="modal fade popup" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content text-center" >
                        <div class="modal-body" style="text-align:center;background:url(@pu.Image)" >
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <a href="@pu.Link"><img class="img img-responsive" src="@pu.Image" /></a>
                            <div class="row" id="Description"><p>@pu.Description</p></div>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">
        $(window).on('load', function () {
            $('#myModal').modal('show');
        });
            </script>
        }
    }
    <!-- Modal -->
    
</div>
