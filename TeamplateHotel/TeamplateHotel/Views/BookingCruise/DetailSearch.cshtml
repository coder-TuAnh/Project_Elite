            </div>
            <div class="col-md-9">
                <div class="matched">
                    <div class="box-hidden">
                        <ul class="list-inline pull-left"></ul>
                        <div id='Paging' style="text-align: right">
                            <div style="float:left">
                                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                            </div>
                            <div style="float:right">
                                @Html.PagedListPager(Model, page => Url.Action("DetailSearch", new { page, namecruise = ViewBag.Namecruise, chekin = ViewBag.Chekin, catalorycruise = ViewBag.Catalorycruise, duration = ViewBag.Duration, price = ViewBag.Price }))
                            </div>
                        </div>

                    </div>
                </div>
                <div class="media-cruises">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="row">
                                <div class="col-md-12 result-search">
                                    <h3><a href="/cruise-detail/@item.Alias-@item.ID" style="color:rgb(185, 111, 23)">@item.Name</a></h3><br />
                                    <div class="row">
                                        <div class="col-md-4">
                                            <img src="@item.Image" class="img-thumbnail" alt="Cinque Terre">
                                        </div>
                                        <div class="col-md-5">
                                            <div class="place">
                                                <strong><i class="fas fa-map-marker-alt"></i> Destinations:</strong>
                                                @item.Location<br>
                                            </div>

                                        </div>
                                        <div class="col-md-3">
                                            <div class="box-hidden">
                                                <div class="pull-right text-left">
                                                    Price <br>
                                                    <b class="z_18 f_hn" style="font-weight:bold">$@item.Price</b>
                                                </div>
                                                <div class="included">

                                                </div>
                                                <a href="/cruise-detail/@item.Alias-@item.ID" class="btn btn-default redirect-cruise">View More</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#chekin').datepicker({
            orientation: "bottom auto",
            todayHighlight: true,
            dateFormat: "dd/mm/yy"
        });
        $(".datepicker1").datepicker();
        $("#widget-owl").owlCarousel({
            loop: true,
            margin: 10,
            responsiveClass: true,
            autoplay: true,
            items: 1, //10 items above 1000px browser width
            dots: true,
            nav: true,
            navText: ['<span class="fa fa-angle-left"></span>', '<span class="fa fa-angle-right"></span>'],

        });

       

    });

</script>


