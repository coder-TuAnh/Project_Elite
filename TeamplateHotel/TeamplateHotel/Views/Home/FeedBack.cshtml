    $(document).ready(function () {
        $("#btn-get-email").click(function () {
            var email = $("#Name");
            //alert(email.val());
            if (email.val() == "") {
                alert("Vui lòng nhập vào");

            } else {
                $.ajax({
                    url: 'FeedBack/SaveEmail',
                    type: 'Post',
                    dataType: 'Json',
                    data: {
                        Name: $("#Name").val(),
                        Content: $("#Content").val()

                    },
                    success: function (data) {
                        if (data.result == "ok") {
                            alert("Cảm ơn bạn đã đăng ký nhận bản tin của chúng tôi");
                        } else {
                            alert(data.message);
                        }
                    },
                });
            }

        });
    });
