@model  ProjectLibrary.Database.BookCruise
@{
    ViewBag.Title = "BookingCruiseDetail";
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}
<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-info-sign"></i>
            <h3>Chi tiết đặt tàu</h3>
            <a href="@Url.Action("BookingCruise", "Cruise")" class="btn btn-primary" style="margin: 5px; float: right;">Quay lại</a>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <div id="infobook">
                <div class="container-h2"><h2>Thông tin đặt tàu</h2></div>
                <div class="infotitlebook"><span>Tên chuyến đi:</span><span class="infob">@Model.NameCruise</span></div>
                <div class="infotitlebook"><span>Ngày bắt đầu: </span> <span class="infob">@String.Format("{0:MMM/dd/yyyy}", Model.Departure)</span></div>
                <div class="infotitlebook"><span>Ngày đặt tàu: </span> <span class="infob">@Model.CreateDate</span></div>
                <div class="infotitlebook"><span>Trẻ em: </span> <span class="infob">@Model.Child</span></div>
                <div class="infotitlebook"><span>Người lớn: </span> <span class="infob">@Model.Adult</span></div>
                <div class="infotitlebook"><span>Loại phòng đã đặt: </span> <span class="infob">@Model.InforCabin</span></div>
                <div class="infotitlebook"><span>Dịch vụ đã đặt: </span> <span class="infob">@Model.InforService</span></div>
                <div class="infotitlebook"><span>Giá Cabin:</span> <span class="infob">@Model.PriceCabin USD</span></div>
                <div class="infotitlebook"><span>Giá Dịch Vụ:</span> <span class="infob">@Model.PriceService USD</span></div>
                <div class="infotitlebook"><span>Tổng tiền:</span> <span class="infob">@Model.Total USD</span></div>
                
            </div>
            <div id="infoRight">
                <div id="infocustumer">
                    <div class="container-h2"></><h2>Thông tin khách hàng</h2></div>
                    <div class="infoc"><span>Họ tên: </span> <span class="infod">@Model.FullName</span></div>
                    <div class="infoc"><span>Địa chỉ: </span> <span class="infod">@Model.Address</span></div>
                    <div class="infoc"><span>Email: </span> <span class="infod">@Model.Email</span></div>
                    <div class="infoc"><span>Số điện thoại: </span> <span class="infod">@Model.Tel</span></div>
                    <div class="infoc"><span>Quốc gia: </span> <span class="infod">@Model.Country</span></div>
                    <div class="infoc">
                        <span>Yêu câu khác: </span>
                        <span class="infod">@Model.Request</span>
                    </div>
                </div>
            </div>
            <div style="clear: both"></div>
        </div>
    </div>
</div>


<style>
    #infobook h2, #infoRight h2 {
        line-height: 48px;
        font-size: 1.4em;
        font-weight: bold;
        color: #146295;
        margin: 0px 0px 0px 30px;
    }

    #xacnhan {
        width: 100%;
        float: left;
    }

    .infoc span, .infotitlebook span {
        color: #121212;
        display: block;
        font-size: 1.2em;
    }

    #infobook {
        width: 45%;
        float: left;
        border: 1px solid #ccc;
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        border-radius: 10px;
        margin-left: 20px;
    }

    #infoPament {
        width: 100%;
        float: left;
        border: 1px solid #ccc;
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        border-radius: 10px;
        margin-top: 35px;
    }

    .infotitlebook :first-child {
        border: none;
    }

    .infotitlebook, .infoc {
        width: 100%;
        float: left;
        border-top: 1px solid #ccc;
        line-height: 30px;
    }

        .infotitlebook span {
            width: 33%;
            display: block;
            height: 100%;
            float: left;
            text-align: right;
            padding-right: 2px;
            border-left: 1px solid #ccc;
            padding: 3px 2px 3px 0px;
        }

            .infotitlebook span.infob {
                width: 63%;
                float: left;
                color: red !important;
                text-align: left !important;
                padding-left: 5px;
            }

    #infoRight {
        width: 45%;
        float: left;
        margin-left: 50px;
    }

    #infocustumer {
        width: 100%;
        float: left;
        border: 1px solid #ccc;
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        border-radius: 10px;
    }

    .infocustumer .infoc span {
        width: 30%;
        float: left;
    }

    .infoc {
        width: 100%;
        float: left;
    }

        .infoc span {
            width: 30%;
            float: left;
            text-align: right;
            padding: 3px 3px 3px 0px;
        }

    .infod {
        text-align: left !important;
        padding-left: 6px;
        color: red !important;
        border-left: 1px solid #ccc;
    }

    .infoc span.infod {
        width: 65%;
        float: left !important;
        text-align: left !important;
        padding-left: 3px;
    }

    #infoPament .infob {
        border-left: 1px solid #ccc;
    }
</style>
