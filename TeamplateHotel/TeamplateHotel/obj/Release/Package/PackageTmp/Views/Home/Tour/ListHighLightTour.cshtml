@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Models
@model List<ShowObject>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
    Hotel company = CommentController.DetailHotel(Request.Cookies["LanguageID"].Value);
}


<div class="sub-nav">
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <h1 class="h1-title-d">
                    Best Sellers Tours
                </h1>
            </div>
            <!-- Sub Nav Links -->
            <nav class="navbar-collapse collapse" id="navbar-sub">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a target="_blank" href="http://www.facebook.com/sharer/sharer.php?u=http://swallowtravel.com/Special-package"><i class="fa fa-facebook"></i><span class="hidden-md hidden-lg">Facebook</span></a>
                    </li>
                    <li>
                        <a target="_blank" href="http://twitter.com/share?url=http://swallowtravel.com/Special-package"><i class="fa fa-twitter"></i><span class="hidden-md hidden-lg">Twitter</span></a>
                    </li>
                    <li>
                        <a target="_blank" href="https://plus.google.com/share?url=http://swallowtravel.com/Special-package"><i class="fa fa-google-plus"></i><span class="hidden-md hidden-lg">Google +</span></a>
                    </li>
                    <li><a target="_blank" href="mailto:@company.Email"><i class="fa fa-envelope-o"></i> <span class="hidden-md hidden-lg">Email</span></a></li>
                </ul>
            </nav>

        </div>
    </div>
</div>

<section class="regular" style="padding-top: 4rem">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-success">Home</a>
                    </li>
                    @*<li class="breadcrumb-item">
                        <a href="/@menu.Alias" class="text-success">@menu.Title</a>
                    </li>*@
                </ol>
            </div>
            <div class="col-lg-9">
                @foreach (var item in Model)
        {
            <div class="item-content">
                <div class="col-md-3">
                    <a href="/@item.MenuAlias/@item.ID/@item.Alias" title="@item.Title">
                        <img src="@item.Image" alt="@item.Title" style="width: 100%;" class="img-border" />
                    </a>
                </div>
                <div class="col-md-7">
                    <h3 class="title-content"><a href="/@item.MenuAlias/@item.ID/@item.Alias" title="@item.Title">@item.Title</a></h3>
                    @Html.Raw(item.Description)
                </div>
                <div class="col-md-2">
                    <p class="from"><i>from</i></p>
                    <p class="div_price"><strong>$@(item.PriceSale)</strong></p>
                    <div class="div-book btn btn-primary"><a href="/@item.MenuAlias/@item.ID/@item.Alias" title="Book">See more</a></div>
                </div>
                <div class="clearfix"></div>
            </div>
}
            </div>
            <div class="col-lg-3">
                @Html.Partial("SideBar")
                <div class="clearfix"></div>
            </div>
        </div>
       
    </div>
</section>

