<script>
    $(document).ready(function () {

        //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
        var validator = $(".form_custom").validate({
            rules: {
                Fullname: "required",
                Phone: {
                    required: true,
                    maxlength: 15
                },
                Email: {
                    required: true,
                    email: true,
                },
                Country: "required",
                Address: "required",
                DepartureDate: "required",
                TotalLength: "required",
                HotelGrade: "required",
                NumberOfClients: "required"
            },
            messages: {

                Phone: {
                    required: "Vui lòng nhập số điện thoại",
                    maxlength: "Vui lòng nhập đúng định dạng",
                },
                Fullname: "Please enter Fullname",
                Email: {
                    required: "We need your email address to contact you",
                    email: "Your email address must be in the format of name@domain.com"
                },
                Country: "Vui lòng nhập quốc gia",
                Address: "Vui lòng nhập địa chỉ",
                DepartureDate: "Vui lòng nhập ngày khởi hành",
                TotalLength: "Vui lòng nhập độ dài chuyến đi",
                HotelGrade: "Vui lòng nhập hạng khách sạn",
                NumberOfClients: "Vui lòng nhập số hành khách",
            }
        });
        function validForm() {
            if ($(".form_custom").valid()) {
                if ($("#departureDate").val() == "") {
                    toastr.error('Please Select Date Of Departure!', 'Error');
                    return false;
                } else {
                    var today = new Date();
                    var td = today.toLocaleDateString("en-US");
                    var select = new Date($("#departureDate").val());
                    var d1 = new Date(select);
                    var d2 = new Date(td);
                    if (d1.getTime() >= d2.getTime()) {
                        return true;
                    } else {
                        toastr.error('Departure date must be greater than or equal to the current date!', 'Error');
                        return false;
                    }
                }
                return true;
            } else {
                validator.focusInvalid();
                toastr.error('Please input data!', 'Error');
                return false;
            }
        }
        $('#submitbtn').on('click', function (e) {
            e.preventDefault()
            if (validForm()) {
                $('.form_custom').submit(function () {
                    $(window).unbind('beforeunload');
                });
                LoadingSendEmail();
                $(".form_custom").submit();
            }
        })
    });
    $(window).bind('beforeunload', function () {
        return 'are you sure you want to leave?';
    });
</script>
