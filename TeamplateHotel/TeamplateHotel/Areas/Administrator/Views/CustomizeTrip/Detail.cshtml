@model  ProjectLibrary.Database.CustomizeTrip
@{
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}
<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-info-sign"></i>
            <h3>Chi tiết tùy chỉnh chuyến đi</h3>
            <a href="@Url.Action("Index","CustomizeTrip")" class="btn btn-primary" style="margin: 5px; float: right;">Quay lại</a>
        </div> <!-- /widget-header -->
        <div class="widget-content">
            <div id="detail-lh">
                <div>
                    <label>Họ tên </label> <p>@Model.FullName</p>
                </div>

                <div>
                    <label>Số điện thoại: </label> <p>@Model.Phone</p>
                </div>

                <div>
                    <label>Địa chỉ email: </label> <p>@Model.Email</p>
                </div>
                <div>
                    <label>Quốc gia: </label> <p>@Model.Country</p>
                </div>
                <div>
                    <label>Địa chỉ: </label> <p>@Model.Address</p>
                </div>
                <div>
                    <label>Ngày khởi hành: </label> <p>@Model.DepartureDate</p>
                </div>
                <div>
                    <label>Liên kết mạng xã hội: </label> <p>@Model.SocialMedia</p>
                </div>
                <div>
                    <label>Số Ngày: </label> <p>@Model.TotalLength</p>
                </div>
                <div>
                    <label>Hạng khách sạn: </label> <p>@Model.HotelGrade</p>
                </div>
                <div>
                    <label>Số hành khách: </label> <p>@Model.NumberOfClients</p>
                </div>
                <div>
                    <label>Cần Visa Việt Nam: </label> <p>@Model.NeedVietnamVisa</p>
                </div>
                <div>
                    <label>Địa điểm khởi hành: </label> 
                    <p> 
                        @Model.VietNam  
                        @Model.Lao 
                        @Model.Cambodia 
                    </p>
                </div>
                <div>
                    <label>Other request: </label> <p>@Model.OtherRequest</p>
                </div>
                <div>
                    <label>Miêu tả: </label> <p>@Model.Describe</p>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    #detail-lh div {
        border: 1px solid #ddd;
        margin: 0px;
        border-bottom: none;
        display: block;
        width: 100%;
        float: left;
    }

        #detail-lh div:last-child {
            border-bottom: 1px solid #ddd;
        }

        #detail-lh div p {
            width: 69%;
            float: right;
            border-left: 1px solid #ddd;
            padding: 10px 10px;
            margin: 0px;
        }

        #detail-lh div label {
            width: 28%;
            text-align: right;
            height: 100%;
            display: block;
            float: left;
            font-weight: bold;
            line-height: 32px;
        }
</style>
