<script>
    //Load ID  by catetory
    var _menuId = 0;

    $("#MenuID").change(function () {
        _menuId = $("#MenuID").val();
        $('#lst').find('option').remove().end();
        $.ajax({
            type: 'GET',
            url: '/Admin/Review/ListObj',
            dataType: 'json',
            data: { menuId: _menuId },
            success: function (data) {
                $.each(data, function (index, element) {
                    $('#lst').append($('<option>', {
                        value: element.ID,
                        text: element.Title
                    }));
                });
            }
        });
    });

    $("#Email").focus(function () {
        $("#errMail").text("");
        $("#infor").text("");
    });

    var _valid = null;

    $("#CheckUseService").click(function () {
        var email = $("#Email").val();

        if (email == "") {
            jQuery.fn.extend({
                scrollToMe: function () {
                    var x = jQuery(this).offset().top - 100;
                    jQuery('html,body').animate({ scrollTop: x }, 500);
                }
            });
            $('#errMail').scrollToMe();
            $("#errMail").text("Please Input Email for check on booking Tour");
            $("#errMail").css('color', 'red');
            return false
        }
        $.ajax({
            type: 'GET',
            url: '/Admin/Review/CheckUseService',
            dataType: 'json',
            data: { Email: email, menuId: _menuId },
            success: function (data) {
                _valid = data.valid;
                if (data.valid) {

                    $("#errMail").text("");
                    $("#infor").text("✅ Confirm used Service(found in book Tour)");
                    $('#UseService').attr('checked', true);
                }
                else {
                    $("#infor").text("❌ Erros not found Email in list book Tour");
                    $("#infor").css('color', 'red');
                    $('#UseService').attr('checked', false);
                }

            }
        });
    });
    $("#UseService").click(function () {
        if (_valid == null) {
            $("#infor").text("⚠️ Click button Check Use Service");
        } else if (_valid) {
            $("#infor").text("✅ Confirm used Service(found in book Tour)");
        } else {
            $("#infor").text(" ⚠️ waring: Not used Service!");
        }
    });
</script>