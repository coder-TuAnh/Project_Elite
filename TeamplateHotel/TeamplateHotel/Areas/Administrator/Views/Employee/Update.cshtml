@using ProjectLibrary.Config
@using TeamplateHotel.Areas.Administrator.Models
@model TeamplateHotel.Areas.Administrator.EntityModel.E_Employee
@{
    Layout = "~/Areas/Administrator/Views/Templates/_LayoutPage.cshtml";
}

<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class=" icon-plus-sign"></i>
            <h3>@ViewBag.Title</h3>
        </div> <!-- /widget-header -->

        <div class="widget-content">
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Update", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="left-control">
                    @Html.HiddenFor(a => a.ID)
                    <div class="control-group">
                        @Html.LabelFor(c => c.FullName, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(c => c.FullName, new { @class = "span4" })
                            @Html.ValidationMessageFor(c => c.FullName)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(c => c.Position, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(c => c.Position, new { @class = "span4" })
                            @Html.ValidationMessageFor(c => c.Position)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(c => c.Image, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(c => c.Image, new { @class = "span4 inputbox upload" })
                            @Html.ValidationMessageFor(c => c.Image)
                        </div>
                    </div>


                    <div class="control-group">
                        @Html.LabelFor(c => c.Description, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextAreaFor(c => c.Description, new { @class = "basic-ckeditor" })
                            @Html.ValidationMessageFor(c => c.Description)
                        </div>
                    </div>

                    <div class="form-actions">
                        <input type="button" value="Submit" class="btn btn-primary" />
                        <a href="@Url.Action("Index","Employee")" class="btn">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        bindUl();
        CreateCkEditor();
        $(".btn-primary").click(function () {
            $(".form-horizontal").submit();
        });
    });
</script>

<style>
    .form-actions {
        border: none;
        background: none;
    }
</style>

